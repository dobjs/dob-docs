.home-container
  display: flex
  flex-direction: column
  padding: 70px 0

.home-feature-container
  display: flex
  justify-content: space-between
  align-items: center
  &:not(:first-child)
    margin-top: 50px
  
.home-feature-label-container
  display: flex
  flex-direction: column
  margin-right: 30px

.home-feature-label-container-right
  display: flex
  flex-direction: column
  margin-left: 30px

.home-feature-title
  font-size: 26px
  color: #555
  margin-bottom: 15px
  font-weight: bold

.home-feature-description
  font-size: 18px
  color: #888

.home-hr
  margin-top: 70px
  width: 100%
  height: 1px
  background-color: #ccc
