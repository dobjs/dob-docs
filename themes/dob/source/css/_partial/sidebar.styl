if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.sidebar-group
  margin-left: 20px
  margin-top: 5px
  margin-bottom: 5px
  font-size: 16px
  color: #999

$sidebar-active
  color: #145c95

.sidebar-link
  color: #555
  text-decoration: none
  padding: 10px 20px
  margin-left: 20px
  font-size: 16px
  letter-spacing: 1px
  height: 15px
  display: flex;
  align-items: center;
  &:hover
    @extend $sidebar-active
  
.sidebar-link.active
    @extend $sidebar-active
    font-weight: bold

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
